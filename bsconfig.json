{
  "name": "catala-dsfr",
  "sources": {
    "dir": "src",
    "subdirs": true,
    "generators": [
      {
        "name": "gen-tailwind",
        "edge": ["css/tailwind.css", ":", "css/index.css"]
      }
    ]
  },
  "generators": [
    {
      "name": "gen-tailwind",
      "command": "tailwindcss build -i $in -o $out -c ../../tailwind.config.js"
    }
  ],
  "package-specs": {
    "module": "es6",
    "in-source": true
  },
  "suffix": ".bs.js",
  "jsx": { "version": 4, "mode": "classic" },
  "bs-dependencies": [
    "@catala-lang/catala-explain",
    "@catala-lang/french-law",
    "@catala-lang/rescript-catala",
    "@rescript/core",
    "@rescript/react",
    "rescript-docx"
  ],
  "bsc-flags": ["-open RescriptCore"],
  "ppx-flags": []
}
