{
  "name": "catala-explorer",
  "sources": {
    "dir": "src",
    "subdirs": true,
    "generators": [
      {
        "name": "gen-tailwind",
        "edge": ["css/tailwind.css", ":", "css/index.css"]
      }
    ]
  },
    "generators": [
      {
        "name": "gen-tailwind",
        "command": "tailwindcss build -i $in -o $out -c ../../tailwind.config.js"
      }
    ],
  "package-specs": {
    "module": "commonjs",
    "in-source": true
  },
  "suffix": ".bs.js",
  "namespace": true,
  "jsx": { "version": 4, "mode": "classic" },
  "bs-dependencies": [ "@rescript/react", "decco" ],
  "ppx-flags": [ "decco/ppx" ]
}
